@model SunsetRestaurant.Models.Tarea

@{
    ViewData["Title"] = "Editar Tarea";
}

<h2>Editar Tarea</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="TareaId" />

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventoId" class="control-label">Evento</label>
        <select asp-for="EventoId" class="form-control" asp-items="ViewBag.EventoId"></select>
        <span asp-validation-for="EventoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AsignadoAId" class="control-label">Colaborador</label>
        <select asp-for="AsignadoAId" class="form-control" asp-items="ViewBag.AsignadoAId">
            <option value="">-- Sin asignar --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
