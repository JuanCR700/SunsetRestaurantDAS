@{
    ViewData["Title"] = "Calendario";
}

<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>

<div style="background-color: #003366; padding: 30px;">
    <div style="max-width: 900px; margin: auto; background-color: white; padding: 20px; border-radius: 8px;">
        <h4 class="text-center mb-4">CALENDARIO DE EVENTOS</h4>
        <div id='calendar'></div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'dayGridMonth,timeGridWeek,timeGridDay'
        },
        events: @Html.Raw(Json.Serialize(ViewBag.Eventos))
      });
      calendar.render();
    });
</script>