@{
    ViewData["Title"] = "Acceso Personal";
}

<div style="background-color: #264653; min-height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <h1 style="font-family: 'Brush Script MT', cursive; font-size: 3rem; color: #e9c46a;">Sunset Restaurant</h1>
    <div style="background-color: #f1faee; padding: 40px; border-radius: 8px; width: 100%; max-width: 400px; text-align: center;">
        <h4 class="mb-4">CREDENCIALES</h4>
        <form asp-action="Login">
            <div class="form-group mb-3">
                <input type="text" name="usuario" class="form-control" placeholder="USUARIO" />
            </div>
            <div class="form-group mb-4">
                <input type="password" name="contrasena" class="form-control" placeholder="CONTRASEÑA" />
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <button type="submit" class="btn" style="background-color: #e63946; color: white; padding: 10px 50px;">ENTRAR</button>
        </form>
    </div>
</div>