@model SunsetRestaurant.Models.Cliente

@{
    ViewData["Title"] = "Registrarse";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Registrarse como Cliente</h2>

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; background-color: #f4a261; color: white;">
        <form asp-action="Registrarse" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre completo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label fw-bold"></label>
                <input asp-for="Telefono" class="form-control" placeholder="Ingrese su número de teléfono" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Cree una contraseña segura" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        input.form-control {
            background-color: #fff;
            color: #000;
        }

        ::placeholder {
            color: #666;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
