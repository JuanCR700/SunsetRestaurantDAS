@model SunsetRestaurant.Models.Colaborador

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Detalles del Colaborador";
}

<div class="container mt-5">
    <h2 class="mb-4">Detalles del Colaborador</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre completo</dt>
                <dd class="col-sm-8">@Model.ColabNombre</dd>

                <dt class="col-sm-4">Correo electrónico</dt>
                <dd class="col-sm-8">@Model.ColabEmail</dd>

                <dt class="col-sm-4">Teléfono</dt>
                <dd class="col-sm-8">@Model.ColabTelefono</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ColaboradorId" class="btn btn-primary">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
