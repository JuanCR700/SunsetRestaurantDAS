@model SunsetRestaurant.Models.Evento

@{
    ViewData["Title"] = "Editar Evento";
}

<h2>Editar Evento</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="EventoId" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClienteId"></label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoEventoId"></label>
        <select asp-for="TipoEventoId" class="form-control" asp-items="ViewBag.TipoEventoId"></select>
        <span asp-validation-for="TipoEventoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaEvento"></label>
        <input asp-for="FechaEvento" type="date" class="form-control" />
        <span asp-validation-for="FechaEvento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadInvitados"></label>
        <input asp-for="CantidadInvitados" type="number" class="form-control" />
        <span asp-validation-for="CantidadInvitados" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adelanto"></label>
        <input asp-for="Adelanto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Adelanto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalAPagar"></label>
        <input asp-for="TotalAPagar" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="TotalAPagar" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
