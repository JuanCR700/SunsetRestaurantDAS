@model SunsetRestaurant.Models.Evento

@{
    ViewData["Title"] = "Eliminar Evento";
}

<h2>Eliminar Evento</h2>

<h3>¿Está seguro de eliminar este evento?</h3>

<div>
    <h4>@Model.Nombre</h4>
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente?.Nombre</dd>

        <dt class="col-sm-2">Tipo de Evento</dt>
        <dd class="col-sm-10">@Model.TipoEvento?.Nombre</dd>

        <dt class="col-sm-2">Fecha del Evento</dt>
        <dd class="col-sm-10">@Model.FechaEvento?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="EventoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
